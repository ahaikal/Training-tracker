<h1>Please sign in </h1>
<% flash.each do |key, value| %>
  <h3><%= key %>: <%= value %></h3>
<% end %>


<div class="container" style="margin-top:30px">
  <div class="col-md-4 col-md-offset-4">
    <div class="panel panel-default">
      <div class="panel-heading"><h3 class="panel-title"><strong>Sign in </strong></h3>
      </div>
      <div class="panel-body">
        <div class="form-group">
          <%= form_for(:sessions, url: sessions_path) do |f| %>
            <%= f.text_field :email, placeholder: "Email" %> <br>
            <%= f.password_field :password, placeholder: "Password" %> <br>
            <%= f.submit "Sign In!", class: "btn btn-sm btn-default" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>